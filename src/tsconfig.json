{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "DOM.Iterable",
      "es6",
      "es2017"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts", "**/*.tsx", "src/pages/_app.tsx", "src/pages/api/auth/[...nextauth].ts"  ]
}
